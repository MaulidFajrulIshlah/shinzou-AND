<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.bottomsheet.paymentsuccess.BottomSheetPaymentSuccessFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/icClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPaymentSuccess"
            android:layout_width="204dp"
            android:layout_height="208dp"
            android:src="@drawable/bg_payment_success"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSelamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selamat"
            android:textColor="@color/DARKBLUE04"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/ivPaymentSuccess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTransaksiSukses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/transaksi_pembayaran_tiket_sukses"
            android:textSize="14sp"
            android:textColor="@color/NEUTRAL05"
            app:layout_constraintTop_toBottomOf="@id/tvSelamat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTerbitkanTiket"
            style="@style/Btn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginHorizontal="15dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Terbitkan Tiket"
            android:textAlignment="center"
            android:textColor="@color/NEUTRAL01"
            android:textSize="16sp"
            app:cornerRadius="10dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTransaksiSukses"
            tools:layout_editor_absoluteX="15dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>