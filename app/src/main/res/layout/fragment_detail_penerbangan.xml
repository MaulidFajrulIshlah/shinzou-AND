<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.detailpenerbangan.FragmentDetailPenerbangan">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/DARKBLUE05"
            app:layout_anchor="@+id/constraintLayout">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Penerbangan"
                    android:paddingTop="3dp"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginStart="15dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btnBack" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/app_bar"
        app:layout_constraintBottom_toTopOf="@+id/containerPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/containerDeparture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">
                <LinearLayout
                    android:id="@+id/layoutFlightDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tvFlightDestination"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jakarta -> Melbourne"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:lineHeight="24dp"
                        android:textColor="@color/DARKBLUE05"/>
                    <TextView
                        android:id="@+id/tvFlightTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="(4h 0m)"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:lineHeight="24dp"
                        android:textColor="#222222"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_border_primary_purple_one"
                    android:layout_below="@id/layoutFlightDestination">
                    <!--            jadwal pemberangkatan-->
                    <RelativeLayout
                        android:id="@+id/layoutDepartureSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        >
                        <!--                tanggal dan jam keberangkatan-->
                        <LinearLayout
                            android:id="@+id/layoutTimeDeparture"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTimeDeparture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="07:00"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="16sp"
                                android:lineHeight="24dp"
                                android:textColor="@color/NEUTRAL05"/>
                            <TextView
                                android:id="@+id/tvDateDeparture"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Maret 2023"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"
                                android:lineHeight="24dp"
                                android:textColor="@color/NEUTRAL05"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvDepartureAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soekarno Hatta - Terminal 1A Domestik"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/layoutTimeDeparture"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keberangkatan"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/DARKBLUE03"
                            android:layout_marginTop="2dp"
                            android:textAlignment="textEnd"
                            android:layout_toEndOf="@id/layoutTimeDeparture"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/grid1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/NEUTRAL02"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/layoutDepartureSchedule"/>
                    <!--            informasi airline/maskapai -->
                    <RelativeLayout
                        android:id="@+id/layoutInfoAirline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/grid1">
                        <ImageView
                            android:id="@+id/imgAirline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_airline"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/imgAirline"
                            android:layout_marginStart="8dp"
                            >
                            <TextView
                                android:id="@+id/tvNameAirlineAndClass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jet Air-Economy"
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/NEUTRAL05"/>
                            <TextView
                                android:id="@+id/tvFlightNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JT - 203"
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/NEUTRAL05"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Informasi: "
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/NEUTRAL05"
                                android:layout_marginTop="16dp"/>
                            <TextView
                                android:id="@+id/tvInformationBody"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baggage 20 kg\nCabin baggage 7 kg\nIn Flight Entertainment"
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/NEUTRAL05" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/grid2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/NEUTRAL02"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/layoutInfoAirline"/>
                    <!--            info kedatangan-->
                    <RelativeLayout
                        android:id="@+id/layoutArriveSchedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/grid2"
                        >
                        <!--                tanggal dan jam keberangkatan-->
                        <LinearLayout
                            android:id="@+id/layoutTimeArrive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTimeArrive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:00"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="16sp"
                                android:lineHeight="24dp"
                                android:textColor="@color/NEUTRAL05"/>

                            <TextView
                                android:id="@+id/tvDateArrive"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="24dp"
                                android:text="3 Maret 2023"
                                android:textColor="@color/NEUTRAL05"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvArriveAirport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melbourne International Airport"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/layoutTimeArrive"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kedatangan"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/DARKBLUE03"
                            android:layout_marginTop="2dp"
                            android:textAlignment="textEnd"
                            android:layout_toEndOf="@id/layoutTimeArrive"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/containerReturn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/containerDeparture">
                <LinearLayout
                    android:id="@+id/layoutFlightDestinationReturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tvFlightDestinationReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jakarta -> Melbourne"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:lineHeight="24dp"
                        android:textColor="@color/DARKBLUE05"/>
                    <TextView
                        android:id="@+id/tvFlightTimeReturn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:text="(4h 0m)"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="16sp"
                        android:lineHeight="24dp"
                        android:textColor="#222222"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/background_border_primary_purple_one"
                    android:layout_below="@id/layoutFlightDestinationReturn">
                    <!--            jadwal pemberangkatan-->
                    <RelativeLayout
                        android:id="@+id/layoutScheduleReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        >
                        <!--                tanggal dan jam keberangkatan-->
                        <LinearLayout
                            android:id="@+id/layoutTimeReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTimeReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="07:00"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="16sp"
                                android:lineHeight="24dp"
                                android:textColor="@color/NEUTRAL05"/>
                            <TextView
                                android:id="@+id/tvDateReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="3 Maret 2023"
                                android:fontFamily="@font/poppins_medium"
                                android:textSize="14sp"
                                android:lineHeight="24dp"
                                android:textColor="@color/NEUTRAL05"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvAirportReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Soekarno Hatta - Terminal 1A Domestik"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/layoutTimeReturn"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Keberangkatan"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/DARKBLUE03"
                            android:layout_marginTop="2dp"
                            android:textAlignment="textEnd"
                            android:layout_toEndOf="@id/layoutTimeReturn"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                    <View
                        android:id="@+id/grid1Return"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/NEUTRAL02"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/layoutScheduleReturn"/>
                    <!--            informasi airline/maskapai -->
                    <RelativeLayout
                        android:id="@+id/layoutInfoAirlineReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/grid1Return">
                        <ImageView
                            android:id="@+id/imgAirlineReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_airline"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/imgAirlineReturn"
                            android:layout_marginStart="8dp"
                            >
                            <TextView
                                android:id="@+id/tvNameAirlineAndClassReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jet Air-Economy"
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/NEUTRAL05"/>
                            <TextView
                                android:id="@+id/tvFlightNumberReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JT - 203"
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/NEUTRAL05"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Informasi: "
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/NEUTRAL05"
                                android:layout_marginTop="16dp"/>
                            <TextView
                                android:id="@+id/tvInformationBodyReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Baggage 20 kg\nCabin baggage 7 kg\nIn Flight Entertainment"
                                android:textSize="14sp"
                                android:lineHeight="20dp"
                                android:fontFamily="@font/poppins_regular"
                                android:textColor="@color/NEUTRAL05" />
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/grid2Return"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/NEUTRAL02"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="8dp"
                        android:layout_below="@id/layoutInfoAirlineReturn"/>
                    <!--            info kedatangan-->
                    <RelativeLayout
                        android:id="@+id/layoutArriveScheduleReturn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="16dp"
                        android:layout_below="@id/grid2Return"
                        >
                        <!--                tanggal dan jam keberangkatan-->
                        <LinearLayout
                            android:id="@+id/layoutTimeArriveReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tvTimeArriveReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:00"
                                android:fontFamily="@font/poppins_bold"
                                android:textSize="16sp"
                                android:lineHeight="24dp"
                                android:textColor="@color/NEUTRAL05"/>

                            <TextView
                                android:id="@+id/tvDateArriveReturn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:lineHeight="24dp"
                                android:text="3 Maret 2023"
                                android:textColor="@color/NEUTRAL05"
                                android:textSize="14sp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tvArriveAirportReturn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melbourne International Airport"
                            android:textSize="14sp"
                            android:lineHeight="20dp"
                            android:fontFamily="@font/poppins_medium"
                            android:textColor="@color/NEUTRAL05"
                            android:layout_marginTop="2dp"
                            android:layout_below="@id/layoutTimeArriveReturn"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kedatangan"
                            android:textSize="12sp"
                            android:lineHeight="18dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/DARKBLUE03"
                            android:layout_marginTop="2dp"
                            android:textAlignment="textEnd"
                            android:layout_toEndOf="@id/layoutTimeArriveReturn"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/containerPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nestedScroll"
        android:orientation="vertical"
        android:background="#FFFFFF">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:fontFamily="@font/poppins_bold"
                android:textSize="16sp"
                android:lineHeight="24dp"
                android:textColor="@color/NEUTRAL05"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tvPriceTicket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tvTotal"
                android:layout_alignParentEnd="true"
                android:text="IDR 4.950.000/pax"
                android:fontFamily="@font/poppins_bold"
                android:textSize="18sp"
                android:lineHeight="26dp"
                android:textAlignment="textEnd"
                android:textColor="@color/DARKBLUE04"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnSelectFlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih"
            android:fontFamily="@font/poppins_medium"
            android:lineHeight="24dp"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/NEUTRAL01"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            style="@style/Btn"
            android:backgroundTint="@color/DARKBLUE05"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>